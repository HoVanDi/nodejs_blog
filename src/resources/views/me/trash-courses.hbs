<div class="mt-4">
  <div>
    <a href="/me/stored/courses"> Danh sách khóa học</a>
    <h2>Khóa học đã xóa</h2>
  </div>
  <table class="table mt-4">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Tên khóa học</th>
        <th scope="col">Trình độ</th>
        <th scope="col">Thời gian tạo</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      {{#each courses}}
        <tr>
          <th scope="row">{{sum @index 1}}</th>
          <td>{{this.name}}</td>
          <td>{{this.level}}</td>
          <td>{{this.createdAt}}</td>
          <td>
            <a href="" class="btn btn-link btn-restore" data-id={{this._id}}>Khôi phục </a>
            <a
              href=""
              class="btn btn-link"
              data-bs-toggle="modal"
              data-bs-target="#delete-course-modal"
              id="{{this._id}}"
            >Xóa vĩnh viễn</a>
          </td>
        </tr>
      {{else}}
        <tr>
          <td colspan="5" class="text-center">Thùng rác trống.
            <a href="/me/stored/courses">
              Danh sách kháo học
            </a></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

{{! confirm delete course }}
<div id="delete-course-modal" class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Xóa khóa học?</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <p>Hành động này không thể khôi phục. Bạn vẫn muốn xóa khóa học?</p>
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-secondary"
          data-bs-dismiss="modal"
        >Hủy</button>
        <button
          id="btn-delete-course"
          type="button"
          class="btn btn-danger"
        >Xóa</button>
      </div>
    </div>
  </div>
</div>


<form method="POST" name="delete-course-form"></form>
<form method="POST" name="restore-course-form"></form>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
  var exampleModal = document.getElementById('delete-course-modal');
  var deleteForm = document.forms['delete-course-form'];
  var restoreForm = document.forms['delete-course-form'];
  var courseId;


  //Restore
  var restoreBtn = $('.btn-restore')

  $(document).on('click', '.btn-restore', function (e) {
      e.preventDefault();

      const courseId = $(this).data('id'); // Change 'data-id' to 'data-bs-whatever' to match the attribute name

      restoreForm.action = '/course/' + courseId + '/restore?_method=PATCH';
      restoreForm.submit();
   });

  //Delete force
  if (exampleModal) {
    exampleModal.addEventListener('show.bs.modal', function(event) {
      var button = event.relatedTarget;
      courseId = button.getAttribute('id');
    });
  }

  var btnDeleteCourse = document.getElementById('btn-delete-course');
  btnDeleteCourse.onclick = function() {
    deleteForm.action = '/course/' + courseId + '/force?_method=DELETE';
    deleteForm.submit();
  }

</script>